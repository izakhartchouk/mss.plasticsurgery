@{
    Layout = "_PageLayout";
    ViewData["Title"] = "Photo Gallery";
}

@model IEnumerable<OperationViewModel>

@{
    var filePaths = Model.SelectMany(x => x.Images);
}

@section Styles {
    <link rel="stylesheet" href="~/lib/jquery-swiper/css/swiper.min.css">
    <link rel="stylesheet" href="~/css/home/photo-gallery.css">
}

<div class="inner-container">
    <div id="before-and-after" class="carousel">

        <div class="swiper-container">
            <div class="swiper-wrapper">
                @foreach (var filePath in filePaths)
                {
                    <div class="swiper-slide">
                        <img src="@Url.Content(filePath)" alt="Operation Image" class="slider-image"/>
                    </div>
                }
            </div>
        </div>

        <a class="carousel-control left" href="#"></a>
        <a class="carousel-control right" href="#"></a>

    </div>
</div>

