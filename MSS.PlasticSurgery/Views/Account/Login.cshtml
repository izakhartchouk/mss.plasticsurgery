@{
    Layout = "_BaseAccountLayout";
    ViewData["Title"] = "Login";
}

@model LoginViewModel

<div class="login-form">
    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <h2 class="text-center">Вход в Администрацию</h2>

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <input asp-for="Email" type="text" class="form-control" placeholder="Email" required="required">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" required="required">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Войти</button>
        </div>
    </form>

    <p class="text-center"><a href="#">Забыли пароль?</a></p>
</div>