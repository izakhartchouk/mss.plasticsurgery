<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewData["Title"] - МСС</title>

    <environment names="Development">
        <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.css")">
        <link rel="stylesheet" href="@Url.Content("~/css/account/main.css")">
    </environment>

    <environment names="Production">
        <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")">
        <link rel="stylesheet" href="@Url.Content("~/css/account/main.css")">@* TODO: Minify this *@
    </environment>
</head>
<body>
    @RenderBody()

    <environment names="Development">
        <script src="@Url.Content("~/lib/jquery/dist/jquery.js")" asp-append-version="true"></script>
        <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.js")" asp-append-version="true"></script>
    </environment>

    <environment names="Production">
        <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")" asp-append-version="true"></script>
        <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.min.js")" asp-append-version="true"></script>

        @*<script src="~/view-resources/Views/_Bundles/layout-libs.min.js" asp-append-version="true"></script>*@
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>